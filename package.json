{
  "name": "tomate",
  "version": "0.1.0",
  "description": "Task manager, pomodoro CLI",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run format && npm run lint && tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capucho/tomate.git"
  },
  "keywords": [
    "task-manager",
    "pomodoro"
  ],
  "author": "Joao Capucho",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/capucho/tomate/issues"
  },
  "homepage": "https://github.com/capucho/tomate#readme",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
